generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection {
  id                Int @id @default(autoincrement())
  anime_mal_id      String 
  user_email        String
  anime_image       String?
  anime_title       String?

  @@unique([anime_mal_id, user_email])
}

model Comment {
  id                Int @id @default(autoincrement())
  anime_mal_id      String 
  anime_title       String
  user_email        String
  profile_image     String
  username          String
  comment           String
}